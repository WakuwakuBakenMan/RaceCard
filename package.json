{
  "name": "racecard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "data:build": "tsx scripts/build-data.ts",
    "fetch:dates": "tsx scripts/netkeiba/cli.ts dates",
    "fetch:day": "tsx scripts/netkeiba/cli.ts day",
    "fetch:next": "tsx scripts/netkeiba/cli.ts next",
    "data:convert:day": "tsx scripts/netkeiba/convert-to-raceday.ts day",
    "data:convert:next": "tsx scripts/netkeiba/convert-to-raceday.ts next",
    "data:cards:day": "tsx scripts/netkeiba/build-cards.ts day",
    "data:cards:next": "tsx scripts/netkeiba/build-cards.ts next",
    "data:cards:day:ptr": "USE_PUPPETEER=1 tsx scripts/netkeiba/build-cards.ts day",
    "data:cards:next:ptr": "USE_PUPPETEER=1 tsx scripts/netkeiba/build-cards.ts next",
    "data:debug:bias": "tsx scripts/netkeiba/debug-bias.ts",
    "data:publish": "tsx scripts/publish-latest.ts",
    "reco:publish": "tsx scripts/publish-reco-latest.ts",
    "reco:day": "tsx scripts/analytics/build-ev.ts day",
    "reco:latest": "tsx scripts/analytics/build-ev.ts latest",
    "bt:pace": "tsx scripts/analytics/backtest-pace.ts",
    "bt:trifecta": "tsx scripts/analytics/backtest-trifecta.ts",
    "bt:pairs": "tsx scripts/analytics/backtest-pairs.ts",
    "bt:pairs:table": "tsx scripts/analytics/print-pairs-table.ts",
    "bt:trifecta:table": "tsx scripts/analytics/print-trifecta-table.ts",
    "data:latest4": "bash scripts/run-export-latest4.sh",
    "data:update:push": "bash scripts/run-export-and-push.sh",
    "db:export": "python3 scripts/sqlite/export_raceday.py",
    "pg:export": "tsx scripts/pg/export-raceday.ts --publish-latest",
    "pg:export:nopublish": "tsx scripts/pg/export-raceday.ts"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.0",
    "astro": "^4.14.2",
    "dotenv": "^16.6.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "dayjs": "^1.11.13",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.34.0",
    "eslint-plugin-react": "^7.34.3",
    "iconv-lite": "^0.6.3",
    "playwright": "^1.55.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.12",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
